{{#if isFileIcon}}
  <i class="fa fa-file" aria-hidden="true"></i>
{{else if isImageIcon}}
  <i class="fa fa-file-image" aria-hidden="true"></i>
{{else if isAttachIcon}}
  <i class="icon fa fa-paperclip" aria-hidden="true"></i>
{{else if isSendIcon}}
  <i class="icon fa fa-arrow-circle-right" aria-hidden="true"></i>
{{else if isBackIcon}}
  <i class="icon fa fa-arrow-circle-left" aria-hidden="true"></i>
{{else if isMenuIcon}}
  <i class="fa fa-ellipsis-v" aria-hidden="true"></i>
{{else if isPlusIcon}}
  <i class="fa fa-plus-circle"></i>
{{else if isMinusIcon}}
  <i class="fa fa-minus-circle" aria-hidden="true"></i>
{{else if isLocationIcon}}
  <i class="fa fa-location-arrow" aria-hidden="true"></i>
{{else if isCloseIcon}}
  <i class="fa fa-times" aria-hidden="true"></i>
{{/if}}
