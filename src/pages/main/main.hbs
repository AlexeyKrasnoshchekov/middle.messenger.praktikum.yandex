          <a href="/signin" onclick="route()">Signin</a>
          <a href="/profile" onclick="route()">Profile</a>
     </nav>
     <div class="chat">
          <aside class="chat_sidebar">
               <div class="chat_top">
                    {{> link label="Профиль" class="chat_profile_link" href="/profile"}}
                    {{> input type="search" name="message" id="chat_search" placeholder="search"}}
               </div>
               <div class="chat_items_list">
                    {{> chatItem}}
                    {{> chatItem}}
                    {{> chatItem}}
                    {{> chatItem}}
                    {{> chatItem}}
                    {{> chatItem}}
                    {{> chatItem}}
