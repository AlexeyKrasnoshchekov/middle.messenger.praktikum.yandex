                    {{> chatItem}}
               </div>
          </aside>
          <section class="chat_place">
               <div class="chat_place_top">
                    <div class="chat_user">
                         {{> avatar}}
                         <p class="chat_user_name">Вадим</p>
                    </div>
                    <span class="chat_menu">1</span>
               </div>
               <div class="chat_place_middle"></div>
               <div class="chat_place_bottom">
                    <div class="chat_attachment"></div>
                    <div class="chat_message_input">
                         {{> input type="text" name="chat_message" id="chat_message" placeholder="message"}}
                    </div>
                    <div class="chat_send"></div>
               </div>
          </section>
     </div>
</div>