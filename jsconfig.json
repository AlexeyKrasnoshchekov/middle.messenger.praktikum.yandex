{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~components/*": [
                "src/components/*"
            ],
            "~pages/*": [
                "src/pages/*"
            ],
            "~router/*": [
                "src/router/*"
            ],
            "~styles/*": [
                "src/styles/*"
            ],
            "~/*": [
                "src/*"
            ],
            "~utils/*": [
                "src/utils/*"
            ],
            "~form/*": [
                "src/components/form/*"
            ],
            "~link/*": [
                "src/components/link/*"
            ],
            "~assets/*": [
                "src/assets/*"
            ],
            "~icons/*": [
                "src/assets/icons/*"
            ]
        }
    }
}